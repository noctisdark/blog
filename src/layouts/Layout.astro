---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- load theme faster by including the script -->
    <link rel="preload" href="/media/theme_light.svg" as="image">
    <link rel="preload" href="/media/theme_dark.svg" as="image">

    <script is:inline type="module" src="/src/scripts/theme" />
    <script is:inline type="module">
      import { getCurrentTheme, applyTheme } from "/src/scripts/theme";
      applyTheme(getCurrentTheme())
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
