---
import Hero from "./Header/Hero.astro";
import Navigation from "./Header/Navigation.astro";
---

<header class="flex flex-col bg-base-300 min-h-screen">
  <Navigation />
  <Hero />
</header>

<style is:global>
  :root {
    --navbar-height: 4rem;
  }


  .navbar {
    height: var(--navbar-height);
  }

  .hero {
    margin-top: var(--navbar-height);
  }
</style>